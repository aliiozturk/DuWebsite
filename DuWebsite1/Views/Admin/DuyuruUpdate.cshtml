@using DuWebsite1.Models
@model Duyuru
@{

    Layout = "~/Views/Shared/_Layout.cshtml";


}


<link href="~/EklemeTemp/EklemeTempCss.css" rel="stylesheet" />

<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-10">
                            <h2 class="text-uppercase text-center mb-5">DUYURU Güncelle</h2>
                            @using (Html.BeginForm("DuyuruUpdate", "Admin", FormMethod.Post))
                            {

                                <form>

                                    <div class="form-outline mb-4">
                                        @*<input type="text" id="form3Example1cg" class="form-control form-control-lg" />*@
                                        <label class="form-label" for="form3Example1cg">Duyuru Başlığı</label>
                                        @Html.HiddenFor(x => x.DuyuruId)
                                        @Html.HiddenFor(x => x.YayinTarihi)
                                        @Html.TextBox("DuyuruAdi", null, new { @class = "form-control" })

                                    </div>

                                    <div class="form-outline mb-4">
                                        @*<input type="email" id="form3Example3cg" class="form-control form-control-lg" />*@
                                        <label class="form-label" for="form3Example3cg">Duyuru Açıklaması</label>
                                        @Html.TextArea("Aciklama", null, new { @class = "form-control" })
                                    </div>





                                    <div class="d-flex justify-content-center">
                                        @*<button type="button"
                                                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                                Duyuru Ekle
                                            </button>*@
                                        <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Duyuru Güncelle</button>
                                    </div>



                                </form>
                                <div class="duzendiv">
                                    <a class="btn btn-danger" href="/Admin" role="button">Geri</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
























